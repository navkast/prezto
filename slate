s is the default .slate file.
# If no ~/.slate file exists this is the file that will be used.

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Push Bindings
bind right:ctrl;cmd  push right bar-resize:screenSizeX/2
bind left:ctrl;cmd   push left  bar-resize:screenSizeX/2
bind up:ctrl;cmd     push up    bar-resize:screenSizeY/2
bind down:ctrl;cmd   push down  bar-resize:screenSizeY/2

# Push Bindings v2
bind right:ctrl;cmd;shift  push right bar-resize:screenSizeX/3
bind left:ctrl;cmd;shift   push left  bar-resize:screenSizeX/3
bind up:ctrl;cmd;shift     push up    bar-resize:screenSizeY/3
bind down:ctrl;cmd;shift   push down  bar-resize:screenSizeY/3

# Throw bindings
bind pad0:alt,ctrl throw 0 resize
bind pad1:alt,ctrl throw 1 resize
bind pad2:alt,ctrl throw 2 resize
bind pad3:alt,ctrl throw 3 resize

# Window Hints
bind esc:cmd hint

